<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="26dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudentLogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter the name of the course you wish to edit."
        android:textSize = "28sp" />

    <EditText
        android:id="@+id/inputEditCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/prompt_courseName"
        android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/delete_course_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Delete"
            android:backgroundTint="#FF00"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/update_course_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:backgroundTint="#90E"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>